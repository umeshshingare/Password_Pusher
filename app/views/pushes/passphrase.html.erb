<% title(_('Enter The Secret Passphrase')) %>

<div class="container-fluid h-100">
  <div class="row d-flex justify-content-center align-items-center h-100 min-vh-100">
        <div class="col col-md-8">
            <div class="card">
                <%= form_with url: access_push_path(@push), method: :post, data: { turbo: false } do |f| %>
                <div class="input-group">
                    <%= f.text_field :passphrase, {
                      class: 'form-control',
                      autofocus: true,
                      placeholder: _('Enter the secret passphrase provided with this URL'),
                      'aria-label': _('Enter the secret passphrase'),
                      'aria-describedby': "button-addon2",
                      autocomplete: "off"
                    } %>
                    <button class="btn btn-primary" type="submit" id="button-addon2"><%= _('Go') %></button>
                </div>
              <% end %>
            </div>
        </div>
  </div>
</div>
